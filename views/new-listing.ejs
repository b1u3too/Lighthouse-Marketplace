<!DOCTYPE html>
<html lang="en">

<head>
  <title>Create New Listing</title>
  <%- include('partials/head'); %>
</head>

<body>
  <header>
    <%- include('partials/nav')%>
  </header>

  <section class="listing-form">
    <div class="form-banner">
      <h2> Create a New Listing </h2>
    </div>

    <form action="/api/mylistings" method="POST">
      <label for="name">Catchy Headline</label>
      <input type="text" name="title">

      <label for="price">Price (Dollars)</label>
      <input type="text" name="price">

      <label for="description">Description</label>
      <textarea type="text" name="description" cols="30" rows="10"></textarea>

      <label for="photo_url">Link to Photo</label>
      <input type="text" name="photo_url">

      <button type="submit" id="new-item-button">Post Listing</button>
    </form>
  </section>

  <footer>
    <%- include('partials/footer')%>
  </footer>
</body>

</html>
